<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodigoMedicina" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreMedicina"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreMedicina"
            app:layout_constraintStart_toStartOf="@+id/txtNombreMedicina" android:layout_marginStart="3dp"
            android:hint="Direccion Farmacia" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFarmacia"
            app:layout_constraintStart_toStartOf="@+id/txtCodigoMedicina"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/txtCodigoMedicina"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/btnCancelarTip"
            app:layout_constraintStart_toEndOf="@+id/btnFarmacia"
            android:layout_marginStart="52dp" app:layout_constraintEnd_toEndOf="@+id/txtCodigoMedicina"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/txtCodigoMedicina"
            app:layout_constraintHorizontal_bias="0.259"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreMedicina" android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre Farmacia"
            app:layout_constraintHorizontal_bias="0.434"/>
    <Button
            android:text="Consultar"
            android:layout_width="103dp"
            android:layout_height="49dp"
            android:id="@+id/btnConsultar"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFarmacia" app:layout_constraintStart_toStartOf="@+id/btnFarmacia"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/btnCancelarTip"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Ingresos Farmacias"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtNombreMedicina" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintVertical_bias="0.505"/>
</android.support.constraint.ConstraintLayout>