<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarMedicina">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodigoMedicina" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreMedicina"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreMedicina"
            app:layout_constraintStart_toStartOf="@+id/txtNombreMedicina" android:layout_marginStart="3dp"
            android:hint="Codigo Medicina" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPrecioMedicina" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigoMedicina"
            app:layout_constraintStart_toStartOf="@+id/txtCodigoMedicina"
            app:layout_constraintEnd_toEndOf="@+id/txtCodigoMedicina" android:hint="Precio Medicina"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtObservacionMedicina" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPrecioMedicina"
            app:layout_constraintStart_toStartOf="@+id/txtPrecioMedicina" app:layout_constraintEnd_toEndOf="@+id/txtPrecioMedicina"
            android:hint="Observacion Medicina" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDosisMedicina" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtObservacionMedicina"
            app:layout_constraintStart_toStartOf="@+id/txtObservacionMedicina"
            app:layout_constraintEnd_toEndOf="@+id/txtObservacionMedicina" android:hint="Dosis Medicina"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptarMedicina" app:layout_constraintEnd_toStartOf="@+id/btnCancelarMedicina"
            android:layout_marginEnd="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.583"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDosisMedicina"
            app:layout_constraintVertical_bias="0.51"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelarMedicina" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginBottom="49dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDosisMedicina"
            app:layout_constraintVertical_bias="0.536"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreMedicina" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre Medicina"
            app:layout_constraintHorizontal_bias="0.527"/>

</android.support.constraint.ConstraintLayout>