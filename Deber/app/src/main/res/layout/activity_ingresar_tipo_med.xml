<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarTipoMed">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtTipoMed"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.642" android:hint="Tipo Medicina"/>
    <TextView
            android:text="Ingreso Tipo Medicina"
            android:layout_width="227dp"
            android:layout_height="64dp"
            android:id="@+id/textView" android:textSize="24sp"
            android:textAlignment="center" android:textStyle="bold" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Aceptar"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptarTip" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTipoMed" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            app:layout_constraintEnd_toStartOf="@+id/btnCancelarTip" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Consultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConsultar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/btnAceptarTip"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.069"/>
    <Button
            android:text="Cancelar"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelarTip" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTipoMed" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp"/>
</android.support.constraint.ConstraintLayout>