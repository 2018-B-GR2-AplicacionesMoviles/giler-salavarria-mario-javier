<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtDosisMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtObservacionMed"
            app:layout_constraintEnd_toEndOf="@+id/txtObservacionMed"
            app:layout_constraintStart_toStartOf="@+id/txtObservacionMed"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtObservacionMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPrecio"
            app:layout_constraintEnd_toEndOf="@+id/txtPrecio" app:layout_constraintStart_toStartOf="@+id/txtPrecio"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtPrecio" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigoMed"
            app:layout_constraintStart_toStartOf="@+id/txtCodigoMed" app:layout_constraintEnd_toEndOf="@+id/txtCodigoMed"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtCodigoMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreMed"
            app:layout_constraintStart_toStartOf="@+id/txtNombreMed" app:layout_constraintEnd_toEndOf="@+id/txtNombreMed"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtNombreMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnBorrar" android:layout_marginEnd="8dp"
            android:layout_marginBottom="7dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDosisMed"/>
    <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBorrar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDosisMed"/>
</android.support.constraint.ConstraintLayout>