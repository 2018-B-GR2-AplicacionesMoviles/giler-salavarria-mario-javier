<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodigoMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreMed"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreMed"
            app:layout_constraintStart_toStartOf="@+id/txtNombreMed" android:layout_marginStart="3dp"
            android:hint="Codigo Medicina"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPrecio" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigoMed"
            app:layout_constraintStart_toStartOf="@+id/txtCodigoMed"
            app:layout_constraintEnd_toEndOf="@+id/txtCodigoMed" android:hint="Precio Medicina"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtObservacionMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPrecio"
            app:layout_constraintStart_toStartOf="@+id/txtPrecio" app:layout_constraintEnd_toEndOf="@+id/txtPrecio"
            android:hint="Observacion Medicina"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDosisMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtObservacionMed"
            app:layout_constraintStart_toStartOf="@+id/txtObservacionMed"
            app:layout_constraintEnd_toEndOf="@+id/txtObservacionMed" android:hint="Dosis Medicina"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar" app:layout_constraintEnd_toStartOf="@+id/btnCancelar"
            android:layout_marginEnd="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDosisMed"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginBottom="49dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDosisMed"
            app:layout_constraintVertical_bias="0.536"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreMed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre Medicina"/>
</android.support.constraint.ConstraintLayout>