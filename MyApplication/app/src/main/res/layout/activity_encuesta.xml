<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EncuestaActivity">

    <TextView
            android:text="Formulario"
            android:layout_width="122dp"
            android:layout_height="36dp"
            android:id="@+id/txtTitulo" android:textSize="24sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitulo" app:layout_constraintStart_toStartOf="@+id/txtTitulo"
            app:layout_constraintEnd_toEndOf="@+id/txtTitulo" android:hint="Nombre Medicina"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtTelefono"
            app:layout_constraintStart_toStartOf="@+id/txtNombre"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Teléfono"/>
    <EditText
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/txtCodigoPostal"
            app:layout_constraintStart_toStartOf="@+id/txtTelefono"
            app:layout_constraintEnd_toEndOf="@+id/txtTelefono" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTelefono" app:layout_constraintHorizontal_bias="1.0"
            android:hint="Código Postal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtFecha"
            app:layout_constraintStart_toStartOf="@+id/txtCodigoPostal"
            app:layout_constraintEnd_toEndOf="@+id/txtCodigoPostal" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigoPostal" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Fecha"/>
    <Button
            android:text="Registrar"
            android:layout_width="131dp"
            android:layout_height="56dp"
            android:id="@+id/btnRegistrar" app:layout_constraintStart_toStartOf="@+id/txtCkBox"
            app:layout_constraintEnd_toEndOf="@+id/txtCkBox" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCkBox" app:layout_constraintHorizontal_bias="0.594"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:layout_width="138dp"
            android:layout_height="39dp"
            android:id="@+id/txtCkBox" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFecha" app:layout_constraintStart_toStartOf="@+id/txtFecha"
            app:layout_constraintEnd_toEndOf="@+id/txtFecha" app:layout_constraintHorizontal_bias="0.462"
            android:text="Vendida" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>