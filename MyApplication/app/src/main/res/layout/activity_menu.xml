<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/encuesta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:text="Navegador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNavegador"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/btnEncuesta"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/btnEncuesta"
            app:layout_constraintTop_toBottomOf="@+id/btnEncuesta" app:layout_constraintHorizontal_bias="0.526"/>
    <Button
            android:text="Calendario"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/btnCalendario" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNavegador"
            app:layout_constraintStart_toStartOf="@+id/btnNavegador"
            app:layout_constraintEnd_toEndOf="@+id/btnNavegador" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVideo" app:layout_constraintStart_toStartOf="@+id/btnCalendario"
            app:layout_constraintEnd_toEndOf="@+id/btnCalendario" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCalendario" app:layout_constraintHorizontal_bias="0.428"/>
    <Button
            android:text="Mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMapa" app:layout_constraintStart_toStartOf="@+id/btnVideo"
            app:layout_constraintEnd_toEndOf="@+id/btnVideo" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnVideo" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/btnImagen"/>
    <ImageButton
            android:layout_width="97dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/googleg_standard_color_18"
            android:id="@+id/btnImagen" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/btnMapa"
            app:layout_constraintStart_toStartOf="@+id/btnMapa" app:layout_constraintHorizontal_bias="0.444"/>
    <Button
            android:text="Encuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEncuesta" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>