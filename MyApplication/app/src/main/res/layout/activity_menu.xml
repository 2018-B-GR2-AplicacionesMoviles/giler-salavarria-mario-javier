<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/encuesta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:text="Navegador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNavegador"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Calendario"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/btnCalendario" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNavegador"
            app:layout_constraintStart_toStartOf="@+id/btnNavegador"
            app:layout_constraintEnd_toEndOf="@+id/btnNavegador" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVideo" app:layout_constraintStart_toStartOf="@+id/btnCalendario"
            app:layout_constraintEnd_toEndOf="@+id/btnCalendario" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCalendario" app:layout_constraintHorizontal_bias="0.428"/>
    <Button
            android:text="Mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMapa" app:layout_constraintStart_toStartOf="@+id/btnVideo"
            app:layout_constraintEnd_toEndOf="@+id/btnVideo" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnVideo" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011"/>
</android.support.constraint.ConstraintLayout>