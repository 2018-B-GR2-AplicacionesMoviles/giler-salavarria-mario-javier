<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VideoActivity">

    <VideoView
            android:layout_width="324dp"
            android:layout_height="378dp"
            android:id="@+id/videoView" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtVideo" app:layout_constraintStart_toStartOf="@+id/txtVideo"
            app:layout_constraintEnd_toEndOf="@+id/txtVideo" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.455" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.081"/>
    <TextView
            android:text="Video"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:id="@+id/txtVideo" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="24sp"
            android:textAlignment="textStart"/>
</android.support.constraint.ConstraintLayout>